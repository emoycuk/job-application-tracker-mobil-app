<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetailActivity">

    <!-- TITLE -->
    <TextView
        android:id="@+id/tvDetailTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/detail_title"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- JOB DETAILS HEADER -->
    <TextView
        android:id="@+id/tvJobDetailsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/job_details"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvDetailTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- COMPANY -->
    <TextView
        android:id="@+id/tvCompanyValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/company_placeholder"
        app:layout_constraintTop_toBottomOf="@id/tvJobDetailsHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Company: Amazon" />

    <!-- TITLE -->
    <TextView
        android:id="@+id/tvTitleValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/title_placeholder"
        app:layout_constraintTop_toBottomOf="@id/tvCompanyValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Title: Cloud Engineer Intern" />

    <!-- STATUS -->
    <TextView
        android:id="@+id/tvStatusValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/status_placeholder"
        app:layout_constraintTop_toBottomOf="@id/tvTitleValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Status: Applied" />

    <!-- PRIORITY TOGGLE (CUSTOM VIEW) -->
    <TextView
        android:id="@+id/tvPriorityHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/priority_label"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvStatusValue"
        app:layout_constraintStart_toStartOf="parent" />

    <com.emirkilic.hw2.PriorityToggleView
        android:id="@+id/priority_toggle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPriorityHeader"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- EDIT HEADER -->
    <TextView
        android:id="@+id/tvEditHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/edit_section"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/priority_toggle_view"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- EDIT TITLE -->
    <EditText
        android:id="@+id/etTitleDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/hint_title"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/tvEditHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- EDIT STATUS -->
    <EditText
        android:id="@+id/etStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/hint_status"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/etTitleDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- UPDATE -->
    <Button
        android:id="@+id/btn_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/btn_update"
        app:layout_constraintTop_toBottomOf="@id/etStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DELETE -->
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/btn_delete"
        app:layout_constraintTop_toBottomOf="@id/btn_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>