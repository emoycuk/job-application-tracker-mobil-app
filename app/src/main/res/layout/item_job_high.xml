<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:id="@+id/highItemLayout"
    android:background="@android:color/holo_red_light">

    <TextView
        android:id="@+id/tvCompanyHigh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Company"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvPriorityHigh"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleHigh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Job Title"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvCompanyHigh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Badge â€“ Custom View buraya gelecek -->
    <TextView
        android:id="@+id/tvStatusHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Applied"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:padding="4dp"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@id/tvTitleHigh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvPriorityHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIGH"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCompanyHigh" />

</androidx.constraintlayout.widget.ConstraintLayout>